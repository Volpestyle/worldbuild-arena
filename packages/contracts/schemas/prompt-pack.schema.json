{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://worldbuild-arena.dev/schemas/prompt-pack.schema.json",
  "title": "PromptPack",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "hero_image",
    "landmark_triptych",
    "inhabitant_portrait",
    "tension_snapshot"
  ],
  "properties": {
    "hero_image": { "$ref": "#/$defs/prompt" },
    "landmark_triptych": {
      "type": "array",
      "minItems": 3,
      "maxItems": 3,
      "items": { "$ref": "#/$defs/prompt" }
    },
    "inhabitant_portrait": { "$ref": "#/$defs/prompt" },
    "tension_snapshot": { "$ref": "#/$defs/prompt" }
  },
  "$defs": {
    "prompt": {
      "type": "object",
      "additionalProperties": false,
      "required": ["title", "prompt"],
      "properties": {
        "title": { "type": "string", "minLength": 1 },
        "prompt": { "type": "string", "minLength": 1 },
        "negative_prompt": { "type": "string" },
        "aspect_ratio": { "type": "string" }
      }
    }
  }
}
